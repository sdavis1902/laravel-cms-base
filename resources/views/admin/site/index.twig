{% extends 'admin.layouts.main' %}

{% block title %}
	Site View
{% endblock %}

{% block content %}
	<div class="pull-right" style="margin-top: -40px; margin-bottom: 0px; z-index: 1; position: relative;">
		<a href="{{ url('admin/site/page') }}" class="btn btn-success"><i class="fa fa-file"></i> Create Page</a>
		<a href="{{ url('admin/site/folder') }}" class="btn btn-success"><i class="fa fa-folder"></i> Create Folder</a>
	</div>
	<div class="row">
		<div class="col-md-10">
			<div class="box box-solid">
				<!-- /.box-header -->
				<div class="box-body">
					<div class="box-group" id="accordion">
						{% for folder in folders %}
							<div class="panel box box-primary">
								<div class="box-header with-border">
									<h4 class="box-title">
										<a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" class="collapsed">
											{{ folder.name }}
										</a>
									</h4>
								</div>
								<div id="collapseOne" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
									<div class="box-body">
										<div class="box-body">
											<table width="100%" class="table table-striped table-bordered table-hover" id="datatables-users">
												<tbody>
													{% for page in folder.pages %}
														<tr class="odd gradeX">
															<td>{{ page.name }}</td>
															<td>{{ page.visible == 'Yes' ? 'Visible' : 'Hidden' }}</td>
															<td>{{ page.status }}</td>
															<td>
																<a href="{{ url('admin/site/page/' ~ page.id) }}" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
																<a href="{{ url('admin/site/delete-page/' ~ page.id) }}" class="btn btn-danger btn-xs user-delete"><i class="fa fa-times"></i></a>
															</td>
														</tr>
													{% endfor %}
												</tbody>
											</table>
											<!-- /.table-responsive -->
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
				<!-- /.box-body -->
			</div>
		    <!-- /.box -->
		</div>
        <!-- /.col -->
	</div>
{% endblock %}
